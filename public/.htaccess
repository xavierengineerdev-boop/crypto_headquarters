<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # ВАЖНО: Сначала проверяем, что файл НЕ существует
  # Если файл существует - отдаем его как есть
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]
  
  # Если это директория - отдаем как есть
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # Не перенаправляем запросы к статическим файлам (JS, CSS, изображения и т.д.)
  # Это дополнительная защита на случай, если файл не найден
  RewriteCond %{REQUEST_URI} \.(js|mjs|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|json|map)$ [NC]
  RewriteRule ^ - [L]
  
  # Перенаправляем все остальные запросы на index.html (для SPA)
  RewriteRule ^ index.html [L]
</IfModule>

# Правильные MIME типы для JavaScript модулей
<IfModule mod_mime.c>
  AddType application/javascript js mjs
  AddType text/css css
</IfModule>

# Кеширование статических файлов
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>

